<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/color"
    android:orientation="vertical"
    tools:context=".VerifyByText">

    <TextView
        android:id="@+id/display_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="35dp"
        android:text="Enter your Ayah"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="35dp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="30dp"
        android:orientation="vertical"
        android:paddingTop="50dp">


        <EditText
            android:id="@+id/editInput"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="#ffff"
            android:hint="Enter Your Ayah Here"
            android:paddingTop="20dp"
            android:inputType="textMultiLine|textAutoComplete"
            android:padding="15dp" />

        <EditText
            android:id="@+id/editInput2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="40dp"
            android:background="#ffff"
            android:hint="Enter Keywords Here"
            android:inputType="textMultiLine|textAutoComplete"
            android:padding="15dp" />
        <TextView
            android:id="@+id/text"
            android:text="*Please enter atleast two keywords in the input field  above that should exist in the ayah you entered"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
            android:layout_marginTop="40dp"
            android:paddingLeft="60dp"
            android:paddingTop="25dp"
            android:paddingRight="60dp"
            android:paddingBottom="25dp"
            android:text="Verify"
            android:textColor="#000000"
            android:theme="@style/myButtonTheme" />

    </LinearLayout>
    </ScrollView>
</LinearLayout>